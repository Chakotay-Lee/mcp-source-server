{
  "name": "mcp-source-code-server",
  "version": "0.2.0",
  "description": "A secure MCP server for reading and writing source code files",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest",
    "test:vitest:ui": "vitest --ui",
    "test:vitest:coverage": "vitest run --coverage",
    "docker:build": "docker build -t mcp-source-server .",
    "docker:run": "docker run -it --rm -v $(pwd)/workspace:/app/workspace mcp-source-server",
    "lint": "echo 'Linting skipped for now'",
    "format": "echo 'Formatting skipped for now'",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit",
    "deps:health": "./check-dependencies.sh",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "install:clean": "npm install --no-fund --no-audit --silent"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "source-code",
    "file-server",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:@isaacs/inflight@^1.0.6"
  }
}
