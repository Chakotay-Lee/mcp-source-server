{
  "security": {
    "allowedDirectory": "./workspace",
    "maxFileSize": 10485760,
    "maxConcurrentOperations": 10,
    "allowedExtensions": [
      ".js", ".ts", ".jsx", ".tsx",
      ".py", ".pyw", ".ipynb",
      ".cpp", ".cc", ".cxx", ".c", ".h", ".hpp",
      ".java", ".class", ".jar",
      ".cs", ".vb", ".fs",
      ".php", ".phtml",
      ".rb", ".gem",
      ".go", ".mod",
      ".rs", ".toml",
      ".swift",
      ".kt", ".kts",
      ".scala", ".sc",
      ".dart",
      ".html", ".htm", ".xhtml",
      ".css", ".scss", ".sass", ".less", ".styl",
      ".json", ".json5", ".jsonc",
      ".xml", ".xsd", ".xsl", ".xslt",
      ".yaml", ".yml",
      ".toml", ".ini", ".cfg", ".conf",
      ".md", ".markdown", ".mdown", ".mkd",
      ".txt", ".text", ".log",
      ".sh", ".bash", ".zsh", ".fish",
      ".bat", ".cmd", ".ps1", ".psm1",
      ".sql", ".mysql", ".pgsql", ".sqlite",
      ".r", ".R", ".rmd",
      ".m", ".matlab",
      ".pl", ".pm", ".t",
      ".lua",
      ".vim", ".vimrc",
      ".dockerfile", ".dockerignore",
      ".gitignore", ".gitattributes",
      ".editorconfig", ".eslintrc", ".prettierrc",
      ".env.example", ".env.template"
    ],
    "blacklistedPaths": [
      "..",
      "../",
      ".git",
      ".svn",
      ".hg",
      "node_modules",
      "__pycache__",
      ".pytest_cache",
      "venv",
      ".venv",
      "env",
      ".env",
      "secrets",
      ".secrets",
      "private",
      ".private",
      "keys",
      ".keys",
      "credentials",
      ".credentials",
      "config/database",
      "config/secrets"
    ],
    "rateLimiting": {
      "enabled": true,
      "maxRequestsPerMinute": 100,
      "maxConcurrentConnections": 5
    },
    "logging": {
      "enabled": true,
      "logLevel": "info",
      "logFile": "./logs/mcp-server.log",
      "auditLog": "./logs/audit.log"
    }
  },
  "features": {
    "enableStreaming": true,
    "enableCompression": false,
    "enableVersioning": false,
    "enableBackup": true,
    "backupDirectory": "./backups"
  }
}
